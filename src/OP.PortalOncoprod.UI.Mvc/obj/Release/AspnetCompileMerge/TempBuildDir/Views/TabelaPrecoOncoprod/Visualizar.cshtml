@using Resources
@model OP.PortalOncoprod.Application.ViewModels.TabelaPrecoOncoprodViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Visualizar";
}

<br />
@using (Html.BeginForm("Visualizar", "TabelaPrecoOncoprod", FormMethod.Get))
{
    <div class="container-fluid" style="max-width: 100%;">

        <div style="font-family: sans-serif; color: darkgray;">
            <ol class="breadcrumb" style="text-transform: uppercase;">
                <li>@Resources.lblTabelaPreco<span class="glyphicon glyphicon-menu-right"></span></li>
                <li class="active">Detalhes</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div>
                    <div class="pull-left">
                        <a class="btn btn-primary" href="@Url.Action("Index", "TabelaPrecoOncoprod")">
                            <span title="Detalhes" class="glyphicon glyphicon-menu-left"></span>
                            @Resources.lblVoltar
                        </a>
                    </div>
                </div>
            </div>

        </div>
        <br />
        <div>
            <form>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.codigo)
                    @Html.TextBoxFor(model => model.codigo, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.dataAlteracao)
                    @Html.TextBoxFor(model => model.dataAlteracao, new { @Value = Model.dataAlteracao.ToString("d"), @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.margemMinima)
                    @Html.TextBoxFor(model => model.margemMinima, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.margemVenda)
                    @Html.TextBoxFor(model => model.margemVenda, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-12">
                    @Html.DisplayNameFor(model => model.descricao)
                    @Html.TextAreaFor(model => model.descricao, new { @class = "form-control", @rows = "4", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.nomeQuimico)
                    @Html.TextBoxFor(model => model.nomeQuimico, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.laboratorio)
                    @Html.TextBoxFor(model => model.laboratorio, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.ncm)
                    @Html.TextBoxFor(model => model.ncm, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.lista)
                    @Html.TextBoxFor(model => model.lista, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-2">
                    @Html.DisplayNameFor(model => model.exclusivoHospitalar)
                    @Html.TextBoxFor(model => model.exclusivoHospitalar, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.tipo)
                    @Html.TextBoxFor(model => model.tipo, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-2">
                    @Html.DisplayNameFor(model => model.resolucao13)
                    @Html.TextBoxFor(model => model.resolucao13, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-3">
                    @Html.DisplayNameFor(model => model.origem)
                    @Html.TextBoxFor(model => model.origem, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-2">
                    @Html.DisplayNameFor(model => model.ufLaboratorio)
                    @Html.TextBoxFor(model => model.ufLaboratorio, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-12">
                    @Html.DisplayNameFor(model => model.observacao)
                    @Html.TextAreaFor(model => model.observacao, new { @class = "form-control", @rows = "4", @readonly = "true" })
                </div>

                <div class="form-group col-lg-4">
                    @Html.DisplayNameFor(model => model.ean)
                    @Html.TextBoxFor(model => model.ean, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-4">
                    @Html.DisplayNameFor(model => model.nivel)
