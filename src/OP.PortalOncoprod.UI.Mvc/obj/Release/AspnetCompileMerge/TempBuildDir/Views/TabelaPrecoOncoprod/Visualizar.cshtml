                </div>

                <div class="form-group col-lg-4">
                    @Html.DisplayNameFor(model => model.aproximadoAumento)
                    @Html.TextBoxFor(model => model.aproximadoAumento, new { @class = "form-control", @readonly = "true" })
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>Oncoprod RS</legend>
                        <div class="form-group col-lg-6">
                            @Html.DisplayNameFor(model => model.PrVdRS)
                            @Html.TextBoxFor(model => model.PrVdRS, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>Oncoprod SP (Matriz)</legend>
                        <div class="form-group col-lg-4">
                            @Html.DisplayNameFor(model => model.valorClienteGo)
                            @Html.TextBoxFor(model => model.valorClienteGo, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-4">
                            @Html.DisplayNameFor(model => model.valorDemaisClientes)
                            @Html.TextBoxFor(model => model.valorDemaisClientes, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>Norprod Fortaleza/CE</legend>
                        <div class="form-group col-lg-4">
                            @Html.DisplayNameFor(model => model.valorClientesAmEAc)
                            @Html.TextBoxFor(model => model.valorClientesAmEAc, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-4">
                            @Html.DisplayNameFor(model => model.PrVdCE)
                            @Html.TextBoxFor(model => model.PrVdCE, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-4">
                            @Html.DisplayNameFor(model => model.VENDASICMS18)
                            @Html.TextBoxFor(model => model.VENDASICMS18, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>Hosplog DF</legend>
                        <div class="form-group col-lg-3">
                            @Html.DisplayNameFor(model => model.PrVdDF)
                            @Html.TextBoxFor(model => model.PrVdDF, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-3">
                            @Html.DisplayNameFor(model => model.PrVd175RO)
                            @Html.TextBoxFor(model => model.PrVd175RO, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-3">
                            @Html.DisplayNameFor(model => model.PrVd18)
