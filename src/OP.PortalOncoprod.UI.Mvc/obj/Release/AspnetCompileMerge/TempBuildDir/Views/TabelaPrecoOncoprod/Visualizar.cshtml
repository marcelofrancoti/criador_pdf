                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>Oncoprod ES</legend>
                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.clientesES)
                            @Html.TextBoxFor(model => model.clientesES, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.PrVdES)
                            @Html.TextBoxFor(model => model.PrVdES, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.PrVd175ROESRS)
                            @Html.TextBoxFor(model => model.PrVd175ROESRS, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.PrVd18ES)
                            @Html.TextBoxFor(model => model.PrVd18ES, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.PrVd20RJES)
                            @Html.TextBoxFor(model => model.PrVd20RJES, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    <fieldset>
                        <legend>TABELA CMED - P.F</legend>
                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.zero)
                            @Html.TextBoxFor(model => model.zero, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.dezessete)
                            @Html.TextBoxFor(model => model.dezessete, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.dezesseteMeio)
                            @Html.TextBoxFor(model => model.dezesseteMeio, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.dezoito)
                            @Html.TextBoxFor(model => model.dezoito, new { @class = "form-control", @readonly = "true" })
                        </div>

                        <div class="form-group col-lg-2">
                            @Html.DisplayNameFor(model => model.vinte)
                            @Html.TextBoxFor(model => model.vinte, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </fieldset>
                </div>

                <div class="form-group col-lg-12">
                    @Html.DisplayNameFor(model => model.indicacao)
                    @Html.TextAreaFor(model => model.indicacao, new { @class = "form-control", @rows = "4", @readonly = "true" })
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div>
                    <div class="pull-left">
                        <a class="btn btn-primary" href="@Url.Action("Index", "TabelaPrecoOncoprod")">
                            <span title="Detalhes" class="glyphicon glyphicon-menu-left"></span>
                            @Resources.lblVoltar
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </div>

}

<style>

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legend {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 15%;
        border: 0px solid #ddd;
        border-radius: 4px;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>